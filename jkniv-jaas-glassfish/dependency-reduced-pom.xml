    <groupId>net.sf.jkniv</groupId>
    <version>0.3.6</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jkniv-jaas-glassfish</artifactId>
  <name>jkniv-jaas-glassfish</name>
  <description>JAAS Hybrid realm module (LDAP, JDBC, CouchDB) for Glassfish</description>
  <url>http://jkniv.sf.net</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.6</version>
        <configuration>
          <siteDirectory>src/site/content</siteDirectory>
          <outputDirectory>target/generated-site/${project.artifactId}</outputDirectory>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>net.sf.jkniv:jkniv-jaas-common</artifact>
                  <includes>
                    <include>net/sf/jkniv/jaas/**</include>
                    <include>*.properties</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
